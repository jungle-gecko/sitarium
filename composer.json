{
	"name": "sitarium/sitarium",
	"description": " Sitarium makes hosting and live-editing websites easy.",
    "keywords": ["sitarium", "hosting", "live", "editing"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.2.*",
		"wa72/htmlpagedom": "~1.2",
        "caouecs/laravel-lang": "~3.0",
        "orchestra/asset": "~3.0",
        "components/jquery": "2.2.*",
        "components/bootstrap": "3.3.*",
        "jungle-gecko/ajax-form": "1.0.*"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "symfony/css-selector": "2.8.*|3.0.*",
        "symfony/dom-crawler": "2.8.*|3.0.*"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
			"tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php --version",
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-install-cmd": [
            "php artisan key:generate",
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize",
            "php artisan vendor:publish --provider=\"App\\Providers\\AppServiceProvider\" --tag=\"assets\" --force"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize",
            "php artisan vendor:publish --provider=\"App\\Providers\\AppServiceProvider\" --tag=\"assets\" --force",
            "php artisan view:clear"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
